# Email Service Configuration
# Copy this file to .env and fill in your actual values

# =============================================================================
# MAILTRAP CONFIGURATION (Required)
# =============================================================================
MAILTRAP_API_KEY=your_mailtrap_api_key_here
MAILTRAP_INBOX_ID=your_inbox_id_here
MAILTRAP_TEST_MODE=true
MAILTRAP_WEBHOOK_SECRET=your_webhook_secret_here

# =============================================================================
# SUPABASE CONFIGURATION (Required)
# =============================================================================
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_SERVICE_ROLE_KEY=your_service_role_key_here
SUPABASE_ANON_KEY=your_anon_key_here

# =============================================================================
# EMAIL DEFAULTS (Required)
# =============================================================================
DEFAULT_FROM_EMAIL=noreply@yourcompany.com
DEFAULT_FROM_NAME=Your Company Name

# =============================================================================
# EMAIL SERVICE CONFIGURATION (Optional - defaults provided)
# =============================================================================
EMAIL_LOG_LEVEL=info
EMAIL_TIMEOUT=30000
EMAIL_RETRIES=3
EMAIL_RETRY_DELAY=1000
ENABLE_RATE_LIMIT=true
ENABLE_RETRIES=true

# Rate limiting
EMAIL_RATE_LIMIT_MAX=200
EMAIL_RATE_LIMIT_WINDOW=3600000

# =============================================================================
# TEMPLATE ENGINE CONFIGURATION (Optional - defaults provided)
# =============================================================================
TEMPLATE_TRACKING_BASE_URL=https://track.yourcompany.com
COMPANY_NAME=Your Company Name
COMPANY_ADDRESS=Your Company Address
NODE_ENV=development

# Tracking features
ENABLE_PIXEL_TRACKING=true
ENABLE_CLICK_TRACKING=true
ENABLE_OPEN_TRACKING=true

# UTM Parameters
UTM_SOURCE=email
UTM_MEDIUM=email
UTM_CAMPAIGN=
UTM_TERM=
UTM_CONTENT=

# Template limits
MAX_TEMPLATE_SIZE=500000
MAX_TEMPLATE_VARIABLES=100
TEXT_WORDWRAP=80

# Security
DISABLE_HTML_SANITIZATION=false
